{
  "name": "fix-css",
  "version": "1.0.0",
  "description": "Styles to fix unruly user agent default CSS.",
  "private": true,
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "http://jaydenseric.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaydenseric/Fix.git"
  },
  "bugs": "https://github.com/jaydenseric/Fix/issues",
  "homepage": "https://github.com/jaydenseric/Fix#readme",
  "keywords": [
    "fix",
    "css",
    "normalize",
    "reset"
  ],
  "scripts": {
    "lint": "stylelint '**/*.css'",
    "prebuild": "npm run lint",
    "build": "postcss --use postcss-cssnext --output dist/fix.css src/fix.css",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.7.0",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "ignoreFiles": "dist/**",
    "rules": {
      "at-rule-empty-line-before": [
        "always",
        {
          "except": [
            "blockless-after-same-name-blockless",
            "all-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "font-family-name-quotes": "always-where-recommended",
      "function-url-quotes": "always",
      "number-leading-zero": "never",
      "rule-nested-empty-line-before": "never",
      "string-quotes": "single"
    }
  }
}
